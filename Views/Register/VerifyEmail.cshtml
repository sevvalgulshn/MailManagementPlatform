@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Email Doğrulama";
    var email = (string)ViewBag.Email;
}

<div class="container" style="max-width:520px;">
    <div class="card shadow-sm p-4 rounded-4">
        <h4 class="fw-bold mb-2">Email Doğrulama</h4>
        <p class="text-muted small mb-4">Mailinize gelen 6 haneli kodu girin.</p>

        <form asp-controller="Register" asp-action="VerifyEmail" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" name="email" value="@email" />

            <label class="form-label">Email</label>
            <input class="form-control mb-3" value="@email" readonly />

            <label class="form-label">Doğrulama Kodu (6 hane)</label>
            <input class="form-control mb-3" name="confirmCode" maxlength="6" autocomplete="one-time-code" />

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <button class="btn btn-primary w-100">Doğrula</button>
        </form>
    </div>
</div>
